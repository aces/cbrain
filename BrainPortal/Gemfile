source 'http://rubygems.org'

# In the :default group
gem 'rails',         :git     => 'https://github.com/rails/rails.git', :branch => "3-2-stable"
gem 'aws-s3',        :require => 'aws/s3' # Client library for Amazon's Simple Storage Service's REST API
gem "net-ssh",       :require => 'net/ssh'
gem "net-sftp",      :require => 'net/sftp'
gem "sys-proctable", :git     => 'https://github.com/djberg96/sys-proctable.git', :ref => "ac047b6"
gem "mysql2",        "<0.4"
gem "log4r"
gem "thin"
gem "pbkdf2-ruby"
gem "json-schema"
gem "aws-sdk"
gem "rails_autolink"
gem "will_paginate"

group :development do
  gem "wirble"
  gem "looksee"
  gem "hirb"
  gem "pry"
  gem "pry-byebug"
  gem "pry-doc"
end

group :test do
  gem "rspec",                    "~> 3.4"
  gem "rspec-rails",              "~> 3.2"
  gem "factory_girl_rails",       "~> 4.5"
  gem "simplecov",                "~> 0.11"
  gem "rspec-mocks",              "~> 3.4"
  gem 'rspec-activemodel-mocks',  "~> 1.0"
  gem 'rspec-collection_matchers',"~> 1.1"
  gem "database_cleaner",         "~> 1.5"
  gem "test-unit",    "~> 3.1"

  gem "sqlite3" # this is not normally needed outside of CBRAIN's nightly test website
  gem "syntax"  # this is not normally needed outside of CBRAIN's nightly test website
end

