<%= button_with_dropdown_menu("View Options") do %>
  <div class="view_options">
    <%=
        filter_add_link (@filter_params["tree_sort"] == "off" ? "Enable Tree View" : "Disable Tree View"),
                        :parameter => :tree_sort,
                        :value     => set_toggle(@filter_params["tree_sort"])
    %>
    <br>
    <%= filter_add_link @filter_params["view_all"] == 'on' ? "Show only your own files": "Show all available files",
                        :parameter => :view_all,
                        :value     => set_toggle(@filter_params["view_all"])
    %>
    <br>
    <%= filter_add_link @filter_params["view_hidden"] == 'on' ? "Do not show hidden files": "Show hidden files",
                        :parameter => :view_hidden,
                        :value     => set_toggle(@filter_params["view_hidden"])
    %>
    (<%= hidden_icon %>)
  </div>
<% end %>

