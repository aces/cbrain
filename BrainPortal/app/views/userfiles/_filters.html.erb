    <h4>
       Filters<br> 
    </h4>
    <ul id = "filter_menu">
    <li>
         <%= link_to_remote 'All Files', :url  => {:action  => :index, :userfiles_search_type  => :unfilter}, 
                                        :method  => 'get',
                                        :complete  => "$('filter_option_show').show(); $('filter_option_hide').hide();  $('side_filter_menu_wrapper').hide();" 
         %> 
    </li> 
    <li><%= link_to_remote 'MINC Files', :url  => {:action  => :index, :userfiles_search_type => :minc}, 
                                   :method  => 'get',
                                   :complete  => "$('filter_option_show').show(); $('filter_option_hide').hide();  $('side_filter_menu_wrapper').hide();" 
    %> 
  </li>
    <li><%= link_to_remote 'JIV Files', :url  => {:action  => :index, :userfiles_search_type => :jiv},
                                   :method  => 'get',
                                   :complete  => "$('filter_option_show').show(); $('filter_option_hide').hide();  $('side_filter_menu_wrapper').hide();" 
    %> 
   </li>
   
    <% UserfileCustomFilter.all(:conditions  =>  {:user_id  => current_user.id}).each do |filter| %>
    <li id = "custom_filter">
    <b>
    <%= link_to_remote crop_text_to(15, filter.name), :url  => {:action  => :index, :userfiles_custom_filter  => filter.id},
                                    :method  => 'get',
                                    :complete  => "$('filter_option_show').show(); $('filter_option_hide').hide();  $('side_filter_menu_wrapper').hide();" 
     %></b>
    <small><small>
       <%= link_to 'Edit', edit_custom_filter_path(filter) %> 
       <%= link_to 'Delete', filter, :confirm => "Are you sure you want to delete filter '#{filter.name}'?", :method => :delete %>  
    </small></small>
    </li>
    <% end %>
    </ul>
    <ul>
        <%= link_to 'Create Custom Filter', new_custom_filter_path(:type  => 'userfile') %>
    </ul>
    <h4>
       Filter By Tags<br> 
    </h4>
    <ul id = "filter_menu">
    <% current_user.tags.collect(&:name).each do |tag| %> 
     <li>
      <%= link_to_remote crop_text_to(15, tag), :url  => {:action  => :index, :userfiles_tag_filter => tag},
                                      :method  => 'get',
                                      :complete  => "$('filter_option_show').show(); $('filter_option_hide').hide();  $('side_filter_menu_wrapper').hide();" 
       %>
     </li>
    <% end %> 
