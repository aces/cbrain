<% if mess.description.present? %>
  <p class="mess_<%= mess.message_type.to_s %>">
    <% if mess.message_type == 'cbrain_dashboard' || mess.message_type == 'neurohub_dashboard' %>
      <%= (mess.description.presence || "").html_safe %>
    <% else %>
      <%= mess.parse_links( :description ).gsub(/\n/,"<BR>").html_safe %>
    <% end %>
  </p>
<% end %>

<% if mess.variable_text.present? %>
    <p class="mess_<%= mess.message_type.to_s %>">
      <%= mess.parse_links( :variable_text ).gsub(/\n/,"<BR>").html_safe -%>
    </p>
<% end %>

<% if mess.expiry.present? %>
    <p class="mess_<%= mess.message_type.to_s %>">
      Expires: <%=to_localtime(mess.expiry, :datetime) -%>
    </p>
<% end %>

<% if mess.description.blank? && mess.variable_text.blank? && mess.expiry.blank? %>
  <p>
    (No Details)
  </p>
<% end %>

