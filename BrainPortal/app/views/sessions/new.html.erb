<% title 'Login' %>
<br/><br/>
<script type="text/javascript" src="https://login.persona.org/include.js"></script>
<%= javascript_include_tag "login-persona.js" %>
<br/>

<%= form_tag session_path do -%>

    <table class="logintable">

    <% if @browser =~ /msie/i %>
      <tr>
        <td colspan="2">
          <div class="exception_report centered" style="color: black">
            The CBRAIN interface does not support <strong>Microsoft</br>       
            Internet Explorer</strong>. You may still proceed, but we recommend</br>
            using <%= link_to "Chrome", "https://www.google.com/chrome" %>, 
            <%= link_to "Firefox", "http://www.mozilla.org/en-US/firefox/fx/"%>,
            <%= link_to "Opera", "http://www.opera.com/browser/download/" %>, or 
            <%= link_to "Safari", "http://www.apple.com/safari/download/" %>.
          </div>
          <p>
        </td>
      </tr>
    <% end %>

    <tr>
      <td/>
      <td><a href="#" onclick="loginPersona();"><img src="/images/persona_icon.png"></a><br/><br/></td>
    </tr>

    <tr>
      <td/>
      <td><center>or</center><br/></td>
    </tr>

    <tr>
      <td><label for="login">Login</label></td>
      <td class="field"><%= text_field_tag 'login' %></td>
    </tr>

    <tr>  
      <td><label for="password">Password</label></td>
      <td class="field"><%= password_field_tag 'password' %></td>
    </tr>

    <tr>
      <td><td class="field"><br><%= submit_tag 'Log in' %></td></td>
    </tr>

    <tr>
      <td><td class="field"><br><%= link_to "Forgot your password?", request_password_users_path, :class  => "action_link" %></td></td>
    </tr>

  </table>
  
<% end -%>
