<% custom_filter ||= @custom_filter %>
<% filter_type = custom_filter.class.name.underscore %>

<h2>Edit Custom Filter</h2>

<div class="generalbox">

  <%= form_for custom_filter, :as => :custom_filter, :url => {:controller  => "custom_filters", :action => "update", :id  => custom_filter.id }, :method  => :put, :datatype  => "script" do |f| %>
    <%= error_messages_for(custom_filter, :object_name => "custom filter") %>

    <p>
    <%= f.label :name, "Filter name" %><br>
    <%= f.text_field :name %>

    <p>
    <%= render :partial => "custom_filters/#{filter_type}", :locals  => {:custom_filter  => custom_filter}  %>

    <p>
    <%= f.submit "Update", :class => "button" %>
    <%= link_to 'Delete', custom_filters_path(custom_filter),  { :confirm => "Are you sure you want to delete '#{custom_filter.name}' ?", :method => :delete, :class => "button"} %>
  <% end %>

</div>  <!-- End class="generalbox" -->
