<% filter_type = @custom_filter.class.name.underscore %>

<% title "#{filter_type.capitalize.gsub('_',' ')}" %>

<div class="menu_bar">
  <%= overlay_ajax_link "Help", "/doc/sites/custom_filter_info.html", :class  => "button" %>
  <%= link_to 'Delete', custom_filter_path(@custom_filter),  { :method => :delete, :class => "button"} %>
</div>

<br>

<%= error_messages_for @custom_filter, :header_message => "custom filter could not be updated." %>

<%= render :partial => "custom_filters/#{filter_type}", :locals  => {:custom_filter  => @custom_filter}  %>
