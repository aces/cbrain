<b>
<% if filter.is_a? UserfileCustomFilter %>
  <%= filter_add_link crop_text_to(15, filter.name), :controller => :userfiles, :parameter  => :filter_custom_filters_array, :value => filter.id  %>
<% else %>
  <%= filter_add_link crop_text_to(15, filter.name), :controller => @custom_filter.filtered_class_controller, :filters => {:custom_filter  => filter.id} %>
<% end %>
</b>
<small><small>
   <%= overlay_ajax_link "Edit", edit_custom_filter_path(filter) %>
   <%= ajax_link 'Delete', custom_filter_path(filter), :confirm => "Are you sure you want to delete filter '#{filter.name}' ?", :method => :delete, :datatype  => 'script' %>  
</small></small>
