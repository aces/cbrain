<% title 'Tool Info' %>

<div class="menu_bar">
  <%= link_to 'Delete', tool_path(@tool), { :confirm => "Are you sure you want to delete '#{@tool.name}' ?", :method => :delete, :class => "button" } %>
</div>


<div class="display_inline_block" style="min-width: 50%">

    <%= render :partial => 'form_fields' %>

</div>

<% if @tool.has_owner_access?(current_user) %>
  <P>
  <%= render :partial => "layouts/log_report", :locals  => { :log  => @tool.getlog, :title => 'Tool Log' } %>
<% end %>

