<span id="new_model">
  <%= button_with_dropdown_menu('Create New Tool', :open => true) do %>
    <% @bourreaux ||= Bourreau.find_all_accessible_by_user(current_user) %>

    <%= ajax_form_for @tool, :as => :tool, :url => { :action => "create" }, :datatype => "script" do |f| -%>

      <%= render :partial => 'form_fields', :locals  => {:f  => f} %>
      <p><%= f.submit "Create new tool" %></p>

    <% end %>
  <% end %>
</span>

