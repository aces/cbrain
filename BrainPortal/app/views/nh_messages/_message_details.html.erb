<% if mess.description.present? %>
  <p class="flash_<%= mess.message_type.to_s %>">
    <%= mess.parse_links(:description).gsub(/\n/, "<BR>") %>
  </p>
<% end %>

<% if mess.variable_text.present? %>
  <p class="flash_<%= mess.message_type.to_s %>">
    <%= mess.parse_links(:variable_text).gsub(/\n/, "<BR>") %>
  </p>
<% end %>

<% if mess.description.blank? && mess.variable_text.blank? %>
  <p>
    (Empty message)
  </p>
<% end %>

