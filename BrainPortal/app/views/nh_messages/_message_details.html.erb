<% unless mess.description.blank? %>
  <p class="<%= flash_{mess.message_type.to_s} %>">
    <%= Message.parse_markup( mess.description ).gsub(/\n/,"<BR>") %>
  </p>
<% end %>

<% unless mess.variable_text.blank? %>
    <p class="<%= mess.message_type.to_s %>">
      <%= Message.parse_markup( mess.variable_text ).gsub(/\n/,"<BR>") -%>
    </p>
<% end %>

<% if mess.description.blank? && mess.variable_text.blank? %>
  <p>
    (Empty message)
  </p>
<% end %>

