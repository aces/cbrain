<% title "Projects" %>


<% edit_icon = '<svg version="1.1" class="table_action_icon" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
viewBox="0 0 383.947 383.947" style="enable-background:new 0 0 383.947 383.947;" xml:space="preserve">
  <g>
    <polygon points="0,303.947 0,383.947 80,383.947 316.053,147.893 236.053,67.893 			"/>
    <path d="M377.707,56.053L327.893,6.24c-8.32-8.32-21.867-8.32-30.187,0l-39.04,39.04l80,80l39.04-39.04
      C386.027,77.92,386.027,64.373,377.707,56.053z"/>
  </g>
</svg>'.html_safe
%>


<% grid_icon = '
  <div class="btn-solid-secondary nh_action">
    <img src="/images/neurohub/NH_icon_grid.svg"/>
    <p>Grid View </p>
  </div>
'.html_safe %>

<% list_icon = '
  <div class="btn-solid-secondary nh_action">
    <img src="/images/neurohub/NH_icon_list.svg"/>
    <p>List View </p>
  </div>
'.html_safe %>


<% button_view = @scope.custom[:button] %>

<div id="nh_projects" class="nh_content">

  <% if @nh_projects.exists? %>
    <div class="nh_actions">
      <div class="nh_action"><%=
        scope_custom_link(
          button_view ? list_icon : grid_icon,
          @scope, { 'button' => !button_view },
        )
    %></div>
      <%= link_to "+ Add project", {:action => :new }, :method  => :get, :class => "btn-solid-secondary nh_action"  %>
    </div>
    <% if button_view %>
      <div class="grid">
        <% @nh_projects.each do |project| %>
          <div class="card">
            <%= link_to project.name, {:action => :show, :id => project.id}, :method  => :get, :class=>"btn-text-secondary bg-default-wash" %>
            <% if current_user.id === project.creator.id %>
              <a href="/myaccount" class="btn-text-secondary">
                <p class="text-xs"><%= project.creator.try(:login) %></p>
              </a>
            <% else %>
              <p class="text-secondary text-xs"><%= project.creator.try(:login) %></p>
            <% end %>
            <p class="card-text text-ellipsis"><%= project.description.presence || "-" %></p>
            <div class="btn-section card-actions">
              <% if project.can_be_edited_by?(current_user) %>
                <%= link_to(edit_icon,{:action => :edit, :id => project.id}, :method  => :get)  %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
        <div class="nh_table_scroll">
          <table>
            <thead>
              <tr>
                <th>name <span>(<%= @nh_projects.count %></span>)</th>
                <th>maintainer</th>
                <% if @nh_projects.any? {|project| project.can_be_edited_by?(current_user)} %>
                  <th class="table_actions">...</th>
                <% end %>
              </tr>
            </thead>

            <tbody>
                <% @nh_projects.each do |project| %>
                <tr>
                  <th data-type="link"><%= link_to project.name, {:action => :show, :id => project.id}, :method  => :get %></th>
                  <td><%= project.creator.try(:login) %></td>
                  <td class="table_actions">
                    <% if project.can_be_edited_by?(current_user) %>
                      <%= link_to(edit_icon,{:action => :edit, :id => project.id}, :method  => :get,:class=>"btn-solid-secondary")  %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    <% end %>

  <% else %>
    <div class="empty">
      <div class="empty-wrapper">
        <img class="empty-icon" src="/images/neurohub/NH_empty_projects.svg" />
        <p class="empty-text">There are currently no projects.</p>
          <%= link_to "+ Add project", {:action => :new }, :method  => :get, :class => "btn-solid-secondary"  %>
      </div>
    </div>
  <% end %>

</div>

