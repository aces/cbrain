<% title("Files", '') %>

<div id="nh_icon_cb" class="nh_content">
  <% if @files.exists? %>
    <div class="nh_actions">
      <%= link_to "Upload File", new_file_nh_project_path(@nh_project), :class => "btn-solid-secondary nh_action", :method => :get %>
    </div>
    <%= render :partial => 'files_table', :locals => {files: @files, pagination: true} %>
  <% else %>
    <div class="empty">
      <div class="empty-wrapper">
        <img class="empty-icon" src="/images/neurohub/NH_empty_files.svg" />
        <p class="empty-text">There are no current files for this project.</p>
      </div>
    </div>
  <% end %>
</div>
