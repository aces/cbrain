<% is_signed = current_user.custom_licenses_signed.include?(@license_id) %>

<% if is_signed %>

  <%= render :partial => 'show_license_text' %>
  <p>
  You have signed this license agreement.

  <% if @current_licenses.size > 1 %>
    <hr>
    Other licenses on this project:
    <p>
    <% @current_licenses.each do |id| %>
      <%= link_to "Licence ##{id}", show_license_nh_project_path(@nh_project, :license_id => id) %>
      <% if id == @license_id %>
        (currently seen above)
      <% end %>
      <br>
    <% end %>
  <% end %>

<% else %>

  <%= form_tag sign_license_nh_project_path(@nh_project) do %>
    <%= hidden_field_tag :license_id, @license_id %>
    <%= render :partial => 'show_license_text' %>
    <p>
    <%= check_box_tag :license_check %>
    <%= label_tag(:license_check,"By clicking here I agree with all the conditions above") %>
    <p>
    <%= submit_tag "I Agree with above statement", :name => :agree %>
    <%= submit_tag "I Do Not Agree",               :name => :not_agree %>
  <% end %>

<% end %>
