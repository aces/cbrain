
<% title 'Projects' %>
  
<div class="menu_bar menu_bar_left">
   <% button_with_dropdown_menu({:title => 'Create Project', :partial => 'new', :content_id => 'new_group' }, {:id => "new_group_button"}) %>
   <%= link_to "Remove Active Project", {:controller=>"groups", :action=>"switch", :id  => "off"}, :method  => :post, :class  => :button %>
   <% button_with_dropdown_menu(:title => "Help") do %>
     <a class="overlay_link" data-url ="/doc/groups/groups_info.html">Group Info</a>                            
   <% end %>     
</div>

<table id="group_table" class="resource_list">

  <tr><th colspan="7">System Projects</th></tr>
  <tr>
    <th class="subtitle">Name</th>
    <th class="subtitle">Type</th>
    <th class="subtitle">Members</th>
    <th class="subtitle">Site</th>
    <th class="subtitle" colspan="3"/>
  </tr>

  <% for group in @system_groups %>
    <%= render :partial => 'group_table_row', :locals  => {:group  => group} %>
  <% end %>

  <tr><th colspan="7">Work Projects</th></tr>
  <tr>
    <th class="subtitle">Name</th>
    <th class="subtitle">Type</th>
    <th class="subtitle">Members</th>
    <th class="subtitle">Site</th>
    <th class="subtitle" colspan="3"/>
  </tr>

  <% for group in @work_groups %>
    <%= render :partial => 'group_table_row', :locals  => {:group  => group} %>
  <% end %>

</table>

