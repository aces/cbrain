    <tr>
  <% end %>
    <td class="left_align no_wrap">
      <%= select_all_checkbox "workgroup_#{group.id}" %>
      <%= h(group.name) -%>
    </td>
  <% if colnum == numcol-1 %>
    </tr>
  <% elsif i == @other_work_groups.size - 1 %>
    <% if i >= numcol %>
      <td colspan="<%= numcol - (colnum + 1) %>"></td>
    <% end %>
    </tr>
  <% end %>
<% end %>
</table>

<% end %>

