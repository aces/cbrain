
<% title "Project Info" %>

<h2>Details for <%= @group.pretty_category_name(current_user) %> '<%= @group.name %>'</h2>

<div class="generalbox">
  <% if (@group.is_a?(WorkGroup) || @group.is_a?(InvisibleGroup)) && @group.can_be_edited_by?(current_user) %>
    <div class="menu_bar menu_bar_left">
      <%= link_to 'Switch', {:action => :switch, :id => @group.id}, :class => "button", :method  => :post %>
      <%= link_to 'Edit', edit_group_path(@group), { :class => "button" } %>
      <%= link_to 'Delete', group_path(@group), { :confirm => "Are you sure you want to delete '#{@group.name}' ?", :method => :delete, :class => "button" } %>
    </div>
  <% end %>
  <P>
  
  <table class="property_list">
    <tr>
      <th colspan="2" class="subtitle">Project information</th>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Name</th>
        <td><%= @group.name %></td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Type</th>
        <td><%= @group.pretty_category_name(current_user) %></td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Site</th>
        <td>
          <%= link_to_site_if_accessible(@group.site) %>
        </td>
    </tr>
     <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Users</th>
        <td>
          <%= array_to_table(@group.users.sort{ |a,b| a.login.casecmp(b.login)}, :table_class => 'simple bordered') { |u,r,c| link_to_user_with_tooltip(u) }%>
        </td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Files</th>
        <td>
          <%= index_count_filter @group.userfiles.count, :userfiles, {:group_id => @group.id}, :show_zeros => true %>
        </td>
    </tr>
    <tr class="<%= cycle("list-odd", "list-even") %>">
        <th>Tasks</th>
        <td>
          <%= index_count_filter @group.cbrain_tasks.count, :tasks, {:group_id => @group.id}, :show_zeros => true %>
        </td>
    </tr>
    <% if current_user.has_role?(:admin) %>
      <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Tools</th>
          <td>
            <%= index_count_filter @group.tools.count, :tools, {:group_id => @group.id} %>
          </td>
      </tr>
      <tr class="<%= cycle("list-odd", "list-even") %>">
      <th>Data providers</th>
          <td>
            <%= index_count_filter @group.data_providers.count, :data_providers, {:group_id => @group.id} %>
          </td>
      </tr>
      <tr class="<%= cycle("list-odd", "list-even") %>">
      <th>Portal</th>
          <td>
            <%= index_count_filter BrainPortal.where(:group_id => @group.id).count, :bourreaux, {:group_id => @group.id, :type => "BrainPortal"} %>
          </td>
      </tr>
          <tr class="<%= cycle("list-odd", "list-even") %>">
          <th>Execution</th>
          <td>
            <%= index_count_filter Bourreau.where(:group_id => @group.id).count, :bourreaux, {:group_id => @group.id, :type => "Bourreau"} %>
          </td>
      </tr>
    <% end %>
  </table>
</div>
