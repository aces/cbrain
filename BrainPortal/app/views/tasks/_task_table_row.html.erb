<%
 # This partial expects five locals:
 #   :task             => the task object
 #   :task_available   => boolean, to color the row red if false
 #   :is_child         => boolean, makes the row initially invisible if true, and adds an arrow
%>
<% launch_time    = task.launch_time %>
<% launch_time_id = launch_time ? launch_time.to_i : 0 %>

<% if task_available %>
  <tr class="<%= cycle('list-odd', 'list-even') %> row_highlight batch_listing_<%= launch_time_id %>">
    <td><%= check_box_tag("tasklist[]", task.id, false, :class => "task_checkbox task_checkbox_#{launch_time_id}") %></td>
<% else %>
  <tr class="list-unavailable row_highlight batch_listing_<%= launch_time_id %>" title="This task is on an Execution Server that is OFFLINE.">
    <td></td>
<% end %>
    <td class="left"><%= tree_view_icon(is_child, task.level) %><%= link_to_task_if_accessible(task, nil, :name => task.pretty_name) %></td>
    <td><%= overlay_description(task.description, :header_width => 35) %></td>
    <td><%= link_to_user_if_accessible(task.user) %></td>
    <% unless current_project %>
      <td><%= link_to_group_if_accessible(task.group) %></td>
    <% end %>
    <td><%= link_to_bourreau_if_accessible(task.bourreau) %></td>
    <td><%= colored_status(task.status) %></td>
    <td><%= task.run_number %></td>
    <td>
       <%= task.share_wd_tid ? "(Shared)" : pretty_size(task.cluster_workdir_size, :blank => "") %>
       <%= colored_archived_status(task.archived_status) %>
    </td>
    <td><%= to_localtime(task.created_at,:datetime) -%></td>
    <td><%= to_localtime(task.updated_at,:datetime) -%></td>
  </tr>
