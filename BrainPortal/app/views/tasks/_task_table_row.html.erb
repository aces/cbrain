<%
 # This partial expects five locals:
 #   :task             => the task object
 #   :task_available   => boolean, to color the row red if false
 #   :is_child         => boolean, makes the row initially invisible if true, and adds an arrow
%>
<% launch_time    = task.launch_time %>
<% launch_time_id = launch_time ? launch_time.to_i : 0 %>

<% if task_available %>
  <tr class="<%= cycle('list-odd', 'list-even')%> row_highlight batch_listing_<%= launch_time_id %>" <%= is_child ? "style=\"display:none\"" : "" %>>
    <td><%= check_box_tag("tasklist[]", task.id, false, :class => "task_checkbox") %></td>
<% else %>
  <tr class="list-unavailable                     row_highlight batch_listing_<%= launch_time_id %>" <%= is_child ? "style=\"display:none\"" : "" %> title="This task is on an Execution Server that is OFFLINE.">
    <td></td>
<% end %>
    <td class="left"><%= is_child ? "&nbsp;&nbsp;&#x21b3;" : ""%><%= link_to_task_if_accessible(task) %></td>
    <td><%= h(crop_text_to(30, task.description)) %></td>
    <td><%= link_to_user_if_accessible(task.user) %></td>
    <% unless current_project %>
      <td><%= link_to_group_if_accessible(task.group) %></td>
    <% end %>
    <td><%= link_to_bourreau_if_accessible(task.bourreau) %></td>
    <td><%= h(task.status) %></td>
    <td><%= h(task.run_number) %></td>
    <td><%= h(to_localtime(task.created_at,:datetime)) -%></td>
    <td><%= h(to_localtime(task.updated_at,:datetime)) -%></td>
  </tr>
