<div id="account">

  <span id="home_credits">
    <a class="home" href="/home">Home</a>
    <% if current_user %>
      <%= link_to 'My Account', current_user %>
    <% end %>
    <% help_url = RemoteResource.current_resource.help_url %>
    <% unless help_url.blank? %>
      <a href="<%= url_for(help_url.strip) %>" onclick="window.open(this.href); return false;" onkeypress="window.open(this.href); return false;">User Manual</a>
    <% end %>
    <a class="credits" href="/">Credits</a>
    Rev:&nbsp;<%= $CBRAIN_StartTime_Revision %>
  </span>

  <span id="loggedas">
    <% if current_user %>
      Logged in as <%= h current_user.full_name %>
      <a href="/logout">Sign out</a>
    <% else %>
      <a href="/login">Sign in</a>
    <% end %>
  </span>

</div>

