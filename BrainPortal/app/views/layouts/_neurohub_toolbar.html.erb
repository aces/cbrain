<!-- ************************ -->

<% if current_user %>
    <div id="nh_toolbar">
        <a href="/neurohub">
            <div class="nh_toolbar_logo"></div>
        </a>
        <div class="nh_toolbar_account">
          <div class="text-ellipsis"><%= current_user.full_name %></div>
          <div class="text-ellipsis"><%= current_user.name %></div>
        </div>
        <div class="nh_toolbar_buttons">
            <%= link_to 'Dashboard', neurohub_path, { :class => "btn-nav-primary", "data-active"=> request.path_info.include?('welcome') || action_name==="welcome"}  %>
            <%= link_to 'Projects', nh_projects_path, { :class => "btn-nav-primary", "data-active"=> request.path_info.include?('nh_projects') && action_name==="index"  }%>
            <% if @nh_invites_count > 0 %>
                <%= link_to 'Invitations', nh_invitations_path, { :class => "btn-nav-primary badge", "data-badge"=> @nh_new_invites_count > 0 ? @nh_new_invites_count : nil, "data-active"=> request.path_info.include?('nh_invitations') && action_name==="index" } %>
            <% end %>
            <%= link_to 'My Account', myaccount_path, { :class => "btn-nav-primary", "data-active"=> request.path_info.include?('myaccount')} %>
            <a class="btn-nav-primary" href="/signout">Logout</a>
        </div>
    </div>

<% end -%>




