<fieldset class="cookie_notification" style="display: none; width: 300px; margin: auto; text-align: center;">
  <legend>Cookie Notification</legend>
  <strong>THIS SITE EATS DELICIOUS COOKIES!</strong>
  <p>
  <span class="cookie_agree_button" style="border: 2px solid black; padding: 0.2em;">OK fine I agree</span>
  <p>
  <small>
     These cookies are baked with the very best cake batter and are filled with chocolate and butterscotch bits
  </small>
</fieldset>

<p>
<strong class="unagree"> debug remove agree</strong>

<script type="text/javascript">
(function () {
  var agree       = window.localStorage.getItem('cbrain_cookie_agree');
  var notif_panel = $('.cookie_notification');
  if (agree != 'yes') {
    notif_panel.show();
  } else {
    notif_panel.fadeOut();
  }

  $('.cookie_agree_button').on('click', function() {
    window.localStorage.setItem('cbrain_cookie_agree','yes');
    notif_panel.fadeOut();
  });

  $('.unagree').on('click', function() { window.localStorage.setItem('cbrain_cookie_agree', 'no'); notif_panel.fadeIn(); });
})();
</script>

