<div class="nh_table_scroll">
  <table>
    <thead>
      <tr>
        <th><p class="text">name (<%= tasks.count %></span>)</p></th>
        <th><p class="text">user</p></th>
        <th><p class="text">project</p></th>
        <th><p class="text">status</p></th>
        <th><p class="text">last updated</p></th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
            <th>
              <p class="text">
                <%= link_to_task_if_accessible(task, nil, :name_method => :name_and_bourreau , :html_options => {:class => "text btn-text-cbrain external", :'data-link' => "true", :target => "_blank"}) %>
              </p>
            </th>
            <td>
              <p class="text">
                <%= link_to_user_if_accessible(task.user, current_user, :html_options => {:class => "btn-text-cbrain external", :'data-link' => "true", :target => "_blank"}) %>
              </p>
            </td>
            <td>
              <p class="text">
                <%= link_to_group_if_accessible(task.group, nil, :html_options => {:class => "btn-text-cbrain external", :'data-link' => "true", :target => "_blank"}) %>
              </p>
            </td>
            <td>
              <p class="text"><%= colored_status(task.status) %></p>
            </td>
            <td>
              <p class="text">
                <%= to_localtime(task.updated_at,:date) %>
                <%= to_localtime(task.updated_at,:time) %>
            </p>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
