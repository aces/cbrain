/*
=============================================================
| ERRORS
=============================================================
Error banner with bullet-points for explaining issues.
*/

.errorExplanation {
  @include banner("error");
  h2 {
    font-weight: 700;
  }
  ul {
    @include mx(4);
    list-style: disc;
    li {
      @include mx(4);
    }
  }
