    display: flex;
    align-items: center;
    opacity: 0.75;
    color: $DEFAULT_BG;
    transition: $TRANSITION_HOVER_OFF;
    svg {
      @include mr(2);
      @include icon("xxs", $DEFAULT_BG, $DEFAULT_BG);
    }
    &:hover {
      transition: $TRANSITION_HOVER_ON;
      opacity: 1;
    }
  }
}

/*
=============================================================
| COOKIE NOTIFICATION
=============================================================
*/

.cookie_notification {
  display: none; /* javascript code switches this back on as needed */
