table {
  width: 100%;
  margin: auto;
  border-collapse: collapse;
  border-spacing: 0;
  background: $DEFAULT_BG;
  border-radius: 4px;
  border: 0;
  th,
  td {
    display: table-cell;
    min-width: 150px;
    .text {
      display: block;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
      text-align: start;
      justify-content: flex-start;
    }
    &[data-type="int"],
    &[data-action="true"] {
      min-width: 75px;
      width: 75px;
      > * {
        text-align: center;
        justify-content: center;
      }
    }
  }
  thead {
    th {
      @include p(2);
      border: 1px solid $DEFAULT_LT;
      .text {
        @include title("xxs");
        color: $DEFAULT_ALT;
        text-transform: uppercase;
      }
    }
  }
  tbody {
    th,
    td {
      position: relative;
      border-right: 1px solid $DEFAULT_LT;
      color: $DEFAULT_ALT;
      vertical-align: top; // removes table cell default padding
      .text {
        @include title("xxs");
        @include p(2);
        align-items: flex-start;
        .btn-text-cbrain {
          background: inherit;
          text-align: left;
          display: block;
          &:hover {
            background: inherit;
          }
        }
      }
      .text[data-link="true"],
      [data-link="true"] {
        @include title("xxs");
        @include p(2);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        justify-content: inherit;
        align-items: inherit;
      }
      &[data-action="true"] {
        min-width: 75px;
        max-width: 100px;
        width: 100px;
        div {
          display: flex;
          flex-wrap: wrap;
          justify-content: flex-start;
          height: 100%;
          top: 0;
          left: 0;
          width: inherit;
          max-width: inherit;
          min-width: inherit;
        }
        .text[data-link="true"],
        [data-link="true"] {
          width: unset;
          position: unset;
          max-height: 34px;
          margin: 1px;
          border-radius: 0;
          flex: 1 1 48%;
          display: flex;
          justify-content: center;
          &:nth-child(even) {
            margin-right: 0;
          }
          &:not(:first-child):last-child:nth-child(odd) {
            margin-right: 0;
          }
          svg {
            width: 1rem;
            height: 1rem;
            fill: $DEFAULT_BG;
            stroke: $DEFAULT_BG;
          }
        }
      }
    }

    tr:nth-child(even) {
      th,
      td {
        background: $DEFAULT_WASH;
        transition: $TRANSITION_HOVER_OFF;
      }
    }
    tr:nth-child(odd) {
      th,
      td {
        background: $DEFAULT_BG;
        transition: $TRANSITION_HOVER_OFF;
      }
    }
    tr {
      display: table-row;

      &:hover {
        th,
        td {
          background: $SECONDARY_WASH;
          transition: $TRANSITION_HOVER_ON;
        }
      }
    }
  }
}

.nh_table_scroll {
  @include shadow("mid");
  position: relative;
  width: 100%;
  z-index: 1;
  margin: auto;
  overflow: auto;
  flex: 1;
  table {
    thead,
    tbody {
      tr {
        th:first-child {
          position: -webkit-sticky;
          position: sticky;
          left: 0;
        }
      }
      tr:not(:hover) {
        th:first-child {
          position: -webkit-sticky;
          position: sticky;
          left: 0;
          background: $DEFAULT_WASH;
        }
      }
    }
    thead {
      th {
        position: -webkit-sticky;
        position: sticky;
        background: $DEFAULT_BG;
        top: -1px;
        z-index: 3;
        overflow: hidden;
        &:first-child {
          z-index: 4;
        }
        &::before {
          content: ""; // bottom border;
          width: 100%;
          height: 1px;
          position: absolute;
          right: 0;
          bottom: 0;
          background: $DEFAULT_BORDER;
        }
      }
    }
    th:first-child {
      z-index: 2;
      &::after {
        content: "";
        width: 1px;
        height: 100%;
        position: absolute;
        right: 0;
        top: 0;
        background: $DEFAULT_BORDER;
      }
    }
  }
}

