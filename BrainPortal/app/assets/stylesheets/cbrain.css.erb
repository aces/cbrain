.tsk-sw-sub-hdr,
.tsk-sw-name,
.tsk-sw-val {
  background: inherit;
  border: 0;
  text-align: left;
}

.tsk-sw-hdr {
  font-family: sans-serif;
  font-size: 1.1em;
  font-weight: bold;
  padding: 30px 5px 10px 5px;
  text-align: left;
}

.tsk-sw-sub-hdr {
  font-family: sans-serif;
  font-size: 0.9em;
  font-weight: bold;
  text-align: left;
  text-decoration: underline;
}

