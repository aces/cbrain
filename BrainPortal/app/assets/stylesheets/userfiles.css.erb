/* Userfiles index stylesheet */

/* General */

.userfiles_tool_selector {
  padding: 0 1em;
  display: table-row;
}

.userfiles_bourreau_selector {
  padding: 0 1em;
  display: table-row;
}

#userfiles_table td.type_icon,
#userfiles_table th.type_icon {
  max-width: 12px;
}

#userfiles_table td.type_icon > .ui-icon {
  background-image: url(<%= asset_path 'images/ui-black-icons.png' %>);
}

#userfiles_display td.name {
  white-space: nowrap;
}

.rename-fld {
  width: 100%;
  margin-left: -0.5em;
  padding-left: 0.5em;
  border: 1px solid #dddddd;
}

.own_files {
  color: #000000;
}

/* Tool/task launch bar */

.launch_bar {
  border: 2px solid #0471B4;
  margin: 5px;
  padding: 5px;
  position: relative;
  text-align: right;
}

.launch_bar span {
  display: inline-block;
  margin: 0px 5px;
}

.launch_bar span.info {
  display: block;
  float: left;
  font-weight: bold;
  margin-top: 5px;
}

/* Tool/task launch dialog */

#toolsDialog {
  display: none;
}

.tools-container {
  border: 1px solid grey;
  height: 500px;
  overflow-x: hidden;
  overflow-y: auto;
  width: 400px;
}

#toolSelectTable {
  border: none;
  width: 400px;
}

#toolSelectTable td {
  padding: 5px;
  text-align: left;
}

#toolSelectTable tr:nth-child(even) {
  background-color: #f9f9f9;
}

#toolSelectTable tr:hover td {
  background-color: #fff3d3;
}

#toolsDialogWrapper {
  margin-right: 170px;
}

#toolsDialogLeftCol {
  float: left;
  width: 170px;
}

#toolsDialogRightCol {
  float: right;
  margin-right: -170px;
  width: 100%;
}

#tool_version_selector #showAdditionalToolInfo {
  display: inline;
}

#tool_version_selector .additionalToolInfo {
  display: none;
}

.toolsDialogClass .ui-dialog-titlebar {
  background: #05a3d6;
  color: white;
}

.toolsDialogClass .ui-dialog-titlebar .ui-dialog-titlebar-close {
  background: white;
}

.toolsDialogClass .ui-dialog-titlebar .ui-dialog-titlebar-close:hover {
  background: #05a3d6;
}

.toolsDialogLabel {
  font-weight: bold;
}

.toolsLink {
  font-weight: bold;
}

/* Menus */

.act-icon {
  background-repeat: no-repeat;
  display: block;
  height: 16px;
  overflow: hidden;
  text-indent: -99999px;
  width: 16px;
}

#menu-bar {
  margin-bottom: 2em;
}

#static-actions,
#dynamic-actions,
#menu-actions {
  display: inline-block;
}

#static-actions {
  padding-right: 0.5em;
}

#dynamic-actions.hidden {
  display: none;
}

#menu-actions {
  float: right;
  position: relative;
}

#menu-list {
  display: none;
  position: absolute;
  right: 0.1em;
  top: 2.5em;
  z-index: 100;
}

#menu-list .ui-menu-item,
#userfiles_context_menu .ui-menu-item {
  font-weight: normal;
}

#menu-list .ui-menu-item {
  min-width: 15em;
  list-style-image: none;
}

#menu-list .ui-icon,
#userfiles_context_menu .ui-icon,
#menu-list .act-icon {
  background-image: url(<%= asset_path 'images/ui-black-icons.png' %>);
}

#menu-list .act-icon {
  bottom: 0px;
  margin: auto 0px;
  position: absolute;
  right: 0.5em;
  top: 0px;
}

#menu-list > .ui-menu-item {
  padding-left: 1em;
}

#menu-list > .ui-menu-item > .ui-icon {
  left: 1.2em;
}

#menu-list > .ui-menu-item .ui-icon.ui-menu-icon {
  left: 0px;
}

#filters-menu > .filter-item > div > .filter-edit {
  border: 1px solid transparent;
  border-radius: 16px;
}

#filters-menu > .filter-item > div.ui-state-active > .filter-edit:hover {
  border-color: #ffffff;
  background-color: #ffffff;
}

#userfiles_context_menu {
  display: none;
  position: absolute;
}

#userfiles_context_menu .ui-menu-item {
  min-width: 100px;
}

/* Dialogs */

.dlg-ovfl {
  overflow: initial !important;
}

.dlg-ovfl > .dlg-dialog {
  overflow: inherit !important;
}

.dlg-dialog {
  white-space: nowrap;
}

.dlg-fld {
  display: inline-block;
  margin-bottom: 1.2em;
}

.dlg-fld[type="text"] {
  border: 1px solid #e0e0e0;
  color: #000000;
  font-family: sans-serif;
  min-height: 16px;
  padding: 3px 5px 4px 5px;
  width: 200px;
}

.dlg-fld[type="text"]:focus {
  border: 1px solid #606060;
}

.dlg-fld-lbl {
  display: inline-block;
  font-size: 1.15em;
  font-weight: bold;
  margin-right: 0.2em;
  text-align: right;
  width: 70px;
}

.dlg-chk,
.dlg-rad {
  display: none;
}

.dlg-chk-icon,
.dlg-rad-icon {
  border: 1px solid #404040;
  display: inline-block;
  margin-bottom: 1.2em;
  margin-left: 42px;
  vertical-align: middle;
}

.dlg-rad-icon {
  border-radius: 16px;
  height: 16px;
  width: 16px;
}

.dlg-chk + .dlg-chk-icon > .ui-icon {
  background-image: url(<%= asset_path 'images/ui-black-icons.png' %>);
  visibility: hidden;
}

.dlg-chk.dlg-unset + .dlg-chk-icon > .ui-icon {
  background: black;
  border: 4px solid #ffffff;
  height: 8px;
  visibility: visible;
  width: 8px;
}

.dlg-rad-icon > .round-icon {
  background-color: #000000;
  border-radius: 10px;
  border: 0px solid #ffffff;
  display: block;
  height: 10px;
  margin: 3px 0 0 3px;
  visibility: hidden;
  width: 10px;
}

.dlg-chk:checked + .dlg-chk-icon > .ui-icon,
.dlg-chk[checked=checked] + .dlg-chk-icon > .ui-icon,
.dlg-rad:checked + .dlg-rad-icon > .round-icon,
.dlg-rad[checked=checked] + .dlg-rad-icon > .round-icon {
  visibility: visible;
}

.dlg-chk-lbl,
.dlg-rad-lbl {
  display: inline-block;
  font-size: 1.15em;
  font-weight: bold;
  padding-left: 0.2em;
  vertical-align: top;
}

.dlg-msg-warn,
.dlg-msg-err {
  font-weight: bold;
  padding: 0.2em 0.4em;
  visibility: hidden;
}

.dlg-msg-warn {
  background-color: #fffbf3;
  color: #ff9d19;
}

.dlg-msg-err {
  background-color: #fff3f3;
  color: #ff1919;
}

.dlg-left-button {
  position: absolute;
  left: 1.5em;
}

.dlg-cfrm-icon {
  display: inline-block;
  margin: 0.5em;
  vertical-align: middle;
}

.dlg-cfrm-cnt {
  color: #ff0084;
  font-family: monospace;
  font-weight: bold;
}

.dlg-cfrm-obj {
  color: #0471b4;
  font-family: monospace;
  font-weight: bold;
  padding: 0 0.1em;
  vertical-align: middle;
}

#userfiles_dialogs {
  display: none;
}

#upload-dialog,
#prop-dialog {
  margin-top: 0.8em;
}

/* Upload dialog */

#upload-dialog + .ui-helper-clearfix::after {
  display: inline-block;
}

#up-type-auto,
#up-ex-container,
#up-ex-mode,
#up-opt {
  display: none;
}

#up-file {
  width: 300px;
}

#up-dp-help {
  background-image: url(<%= asset_path 'images/ui-blue-icons.png' %>);
  display: inline-block;
  vertical-align: middle;
}

#up-ex-mode {
  margin-left: 20px;
}

#up-ex:checked ~ #up-ex-mode,
#up-ex[checked=checked] ~ #up-ex-mode {
  display: block;
}

#up-opt-toggle {
  display: none;
}

#up-opt-icon {
  display: inline-block;
  height: 16px;
}

#up-opt-icon > .ui-icon {
  background-image: url(<%= asset_path 'images/ui-black-icons.png' %>);
}

#up-opt-toggle:checked + #up-opt-icon > .ui-icon.up-open,
#up-opt-toggle[checked=checked] + #up-opt-icon > .ui-icon.up-open,
#up-opt-icon > .ui-icon.up-closed {
  display: inline-block;
}

#up-opt-icon > .ui-icon.up-open,
#up-opt-toggle:checked + #up-opt-icon > .ui-icon.up-closed,
#up-opt-toggle[checked=checked] + #up-opt-icon > .ui-icon.up-closed {
  display: none;
}

#up-opt-lbl {
  cursor: pointer;
  display: inline-block;
  font-size: 1.1em;
  font-style: italic;
  font-weight: bold;
  margin-bottom: 0.9em;
  padding-left: 0.2em;
  vertical-align: top;
}

#up-opt-toggle:checked ~ #up-opt,
#up-opt-toggle[checked=checked] ~ #up-opt {
  display: block;
}

#up-alt-help a {
  color: #0471b4;
  cursor: pointer;
  display: inline-block;
  font-weight: bold;
  padding: 0.7em;
  text-decoration: none;
}

/* Upload progress popup */

.no-close .ui-dialog-titlebar-close {
  display: none;
}

.progress-dialog {
  min-height: 100% !important;
}

.progress-dialog .bar {
  position: relative;
  text-align: center;
}

.progress-dialog .label {
  position: absolute;
  top: 4px;
  width: 100%;
}

/* Properties dialog */

.pp-hid-ind,
.pp-ro-ind {
  color: purple;
  font-size: 0.9em;
  font-family: monospace;
}

/* Tags dialog */

#tag-table {
  border: 0px;
  border-collapse: collapse;
}

.tag-name,
.tag-prj {
  padding-left: 1em;
  text-align: left;
}

th.tag-name,
th.tag-prj {
  padding-left: 1.4em;
}

.tag-txt-name,
.tag-txt-prj {
  border: 1px solid white;
  display: block;
  min-height: 16px;
  padding: 3px 5px;
}

.tag-body .tag-txt-name,
.tag-body .tag-txt-prj {
  cursor: pointer;
}

.tag-body .tag-txt-name:hover,
.tag-body .tag-txt-prj:hover {
  border-color: #e0e0e0;
}

.tag-body .tag-txt-name:active,
.tag-body .tag-txt-prj:active {
  border-color: #0471b4;
}

#tag-table .tag-in-name {
  border: 1px solid #e0e0e0;
  color: #000000;
  font-family: sans-serif;
  padding: 3px 5px 4px 5px;
}

#tag-table .tag-in-name:focus {
  border: 1px solid #606060;
}

#tag-table .tag-in-name.tag-invalid {
  border: 1px solid #ff1919;
}

#tag-mov-prj {
  display: none;
}

.tag-files,
.tag-ind {
  padding-right: 1em;
  text-align: right;
}

td.tag-files {
  font-family: monospace;
}

.tag-act {
  margin: 0.2em 1em;
  text-align: center;
}

#tag-table .tag-ind > .ui-icon {
  background-image: url(<%= asset_path 'images/ui-black-icons.png' %>);
  display: inline-block;
  visibility: hidden;
}

#tag-table .tag-act > .ui-icon {
  background-color: inherit;
  background-image: url(<%= asset_path 'images/ui-blue-icons.png' %>);
  border: 0;
  cursor: pointer;
  display: block;
  outline: none;
}

#tag-table .tag-act > .ui-icon:disabled {
  background-image: url(<%= asset_path 'jquery-ui/ui-icons_777777_256x240.png' %>)
  cursor: inherit;
}

#tag-table .tag-act > .ui-icon:focus {
  outline: none;
}

#tag-table .tag-act > .ui-icon::-moz-focus-inner {
  border: 0;
}

.tag-row {
  height: 32px;
}

#tag-hdr {
  border-bottom: 2px solid #d0d0d0;
  margin-bottom: 1em;
  padding-bottom: 1em;
}

.tag-add {
  border-top: 2px solid #d0d0d0;
  color: #000000;
}

.tag-row > td,
.tag-row > th {
  background: white;
  border: 0px;
  color: #404040;
  font-family: sans-serif;
  font-size: inherit;
  font-weight: normal;
}

.tag-body > .tag-row > td {
  color: #000000;
}

#tag-hdr > th {
  font-weight: bold;
}

/* Persistent selection */

.persistent-selection {
  padding-left: 1em;
}

.psel-count {
  color: #05a3d6;
  font-size: 1.2em;
  font-family: monospace;
}

.psel-all, .psel-clear {
  color: blue;
  cursor: pointer;
}
