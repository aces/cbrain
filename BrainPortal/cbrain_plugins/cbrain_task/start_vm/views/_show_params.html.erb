<strong>Disk image: </strong>
  <%= h(Userfile.find(params[:interface_userfile_ids][0]).name) %>
<br/>
<strong>VM username:</strong>
   <%= params[:vm_user] %>
<br/>
<strong>VM boot timeout (s):</strong>
   <%= params[:vm_boot_timeout] %>
<br/>
<strong>VM CPUs</strong>
   <%= params[:vm_cpus] %>
<br/>
<strong>VM RAM</strong>
   <%= params[:vm_ram)gb] %> GB
<br/>
<strong>QEMU options:</strong>
   <%= params[:qemu_params] %>
<br/>
<strong>Job slots:</strong>
   <%= params[:job_slots] %>
<br/>
<strong>Use emulation:</strong>
  <%= (params[:emulation] == "1")? "yes" : "no" %>
<br/>
<hr/>
<strong>VM status:</strong>
   <font color="red"><%= params[:vm_status] %></font>
<br/>
<strong>Local IP:</strong>
   <%= params[:vm_local_ip] %>
<br/>
<strong>SSH port:</strong>
   <%= params[:ssh_port] %>
<br/>
<strong>Display:</strong>
   :<%= params[:vnc_display] %>
<br/>



