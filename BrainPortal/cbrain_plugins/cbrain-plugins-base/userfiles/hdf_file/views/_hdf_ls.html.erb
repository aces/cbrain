<% path = @userfile.cache_full_path.to_s.bash_escape %>
<% cat  = lambda { |com| IO.popen(com,"r") { |fh| fh.read } } %>
<% max_list = 500 %>

<h5>HDF5 File Information (h5ls)</h5>

<pre><%= cat.("h5ls -r #{path} | head -#{max_list}") %></pre>

