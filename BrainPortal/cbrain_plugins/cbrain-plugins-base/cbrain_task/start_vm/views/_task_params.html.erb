<% bourreau = Bourreau.find(@task.bourreau_id)
   available_disk_images    = bourreau.scir_class.get_available_disk_images(bourreau)
   available_instance_types = bourreau.scir_class.get_available_instance_types(bourreau)
   available_ssh_key_pairs  = bourreau.scir_class.get_available_key_pairs(bourreau)
 %>

<strong>Disk image: </strong><br/>
<%=  form.params_select(:disk_image, options_for_select(available_disk_images, params[:disk_image])) %>
<br/><br/>

<strong>VM username:</strong><br/>
<%= form.params_text_field(:vm_user, :value => params[:vm_user]) %>
<br/>
<br/>

<strong>SSH key pair:</strong><br/>
<%=  form.params_select(:ssh_key_pair, options_for_select(available_ssh_key_pairs, params[:ssh_key_pair])) %>
<br/>
<br/>

<strong>Instance type: </strong><br/>
<%=  form.params_select(:instance_type, options_for_select(available_instance_types, params[:instance_type])) %>
<br/><br/>

<strong>VM job slots:</strong><br/>
   <%= form.params_text_field(:job_slots, :value => params[:job_slots].to_s) %>
<br/><br/>

<strong>VM boot timeout (s):</strong><br/>
   <%= form.params_text_field(:vm_boot_timeout, :value => params[:vm_boot_timeout].to_s) %>
<br/><br/>

<strong>VM ssh tunnel port:</strong><br/>
   <%= form.params_text_field(:vm_ssh_tunnel_port, :value => params[:vm_ssh_tunnel_port].to_s) %>
<br/><br/>

<strong>Number of instances to start (&le;20):</strong><br/>
   <%= form.params_text_field(:number_of_vms, :value => params[:number_of_vms].to_s) %>
<br/><br/>

<strong>VM tag:</strong><br/>
   <%= form.params_text_field(:tag, :value => params[:tag].to_s) %>


